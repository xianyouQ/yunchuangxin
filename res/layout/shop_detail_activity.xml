<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/d_shop_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_pic" />

        <TextView
            android:id="@+id/d_shop_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话号码" />

        <TextView
            android:id="@+id/d_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址" />

        <TextView
            android:id="@+id/d_collect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏店铺" />
    </LinearLayout>

    <TextView
        android:id="@+id/d_shop_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1.5"
        android:text="店铺描述" />

    <TextView
        android:id="@+id/d_shop_preferential_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="优惠描述" />

</LinearLayout>