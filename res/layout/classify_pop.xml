<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/class_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/class_pop_btn_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/class_food_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_class_meishi" />

        <TextView
            android:id="@+id/class_food_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="美食" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_ktv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/class_pop_btn_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/class_ktv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_class_ktv" />

        <TextView
            android:id="@+id/class_ktv_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="KTV" />
    </LinearLayout>

</LinearLayout>